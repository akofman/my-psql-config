\echo
\echo ':aliases\t\t-- show all aliases'
\echo ':dbsize\t\t\t-- Database size'
\echo ':tablesize\t\t-- Tables size'
\echo ':walsize\t\t-- Total WAL size'
\echo ':slotsize\t\t-- Slots size'
\echo ':indexanalyse\t\t-- Slots size'
\echo ':clear\t\t\t-- Clear the terminal screen'
\echo ':ll\t\t\t-- List the contents of the current directory'
\echo '\\h\t\t\t-- Help with SQL commands'
\echo '\\?\t\t\t-- Help with psql commands'
\echo

\set aliases        '\\i ~/.psqlrc-aliases'
\set dbsize         `cat ~/aliases/db_size.sql`
\set tablesize      `cat ~/aliases/table_size.sql`
\set walsize        `cat ~/aliases/wal_size.sql`
\set slotsize       `cat ~/aliases/slot_size.sql`
\set indexanalyse   `cat ~/aliases/index_analyse.sql`
\set clear          '\\! clear;'
\set ll             '\\! ls -lrt;'